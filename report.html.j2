<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Patching Report</title>
</head>
<body>
  <h1>Patching Report</h1>
  <table>
    <thead>
      <tr>
        <th>Hostname</th>
        <th>Distro Ver</th>
        <th>Kernel Ver</th>
        <th>Last Rebooted</th>
        <th>Status</th>
        <th>Failure Reason</th>
      </tr>
    </thead>
    <tbody>
      {% for row in csv_file.results %}
      <tr>
        <td>{{ row.Hostname }}</td>
        <td>{{ row.Distro_Ver }}</td>
        <td>{{ row.Kernel_Ver }}</td>
        {% if row.Status == 'success' %}
          <td>{{ row.Last_Rebooted }}</td>
        {% else %}
          <td>UNREACHABLE</td>
        {% endif %}
        <td>{{ row.Status }}</td>
        {% if row.Status == 'failed' and row.reboot != 'UNREACHABLE' %}
          <td>{{ row.reboot }}</td> {% else %}
          <td>-</td> {% endif %}
      </tr>
      {% endfor %}
    </tbody>
  </table>
</body>
</html>
